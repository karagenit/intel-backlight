#!/usr/bin/env ruby

require 'backlight'

config = Backlight::Settings.new

cmd = ARGV[0]

if cmd.nil? || cmd.empty?
    puts config.get
elsif cmd == "help" || cmd == "--help" || cmd == "-h"
    puts "Usage: backlight [+/-][PERCENT]"
elsif cmd[0] == "+" || cmd[0] == "-"
    config.set(config.get + cmd.to_i)
else
    config.set cmd.to_i
end
